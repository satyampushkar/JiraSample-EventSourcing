{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "command-route": {
        "ClusterId": "command-cluster",
        "AuthorizationPolicy": "admin",
        "Match": {
          "Path": "/api/jira/{**catch-all}",
          "Methods": [ "POST", "PUT", "PATCH" ]
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      },
      "query-route": {
        "ClusterId": "query-cluster",
        //"RateLimiterPolicy": "fixed",
        "Match": {
          "Path": "/api/jira/{**catch-all}",
          "Methods": [ "GET" ]
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "command-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5001/"
          }
        }
      },
      "query-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:5002/"
          }
        }
      }
    }
  }
}
